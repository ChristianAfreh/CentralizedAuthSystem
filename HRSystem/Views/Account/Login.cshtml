@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@section Styles{
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
}

<section>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign In</p>

                                <form class="mx-1 mx-md-4" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                    <p id="errorDiv" class="text-danger">
                                    </p>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                            <input type="text" placeholder="jdoe" asp-for="@Model.UserName" class="form-control" />
                                            <label class="form-label" asp-for="@Model.UserName">Your Username</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                            <input type="password" asp-for="@Model.Password" class="form-control" />
                                            <label class="form-label" asp-for="@Model.Password">Your Password</label>
                                        </div>
                                    </div>
                                
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                                    </div>
                                    <!-- Register button -->
                                    <div class="text-center">
                                        <p>Not having an account? <a asp-action="Register" asp-controller="Account">Register</a></p>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/lib/font-awesome/js/"></script>

}